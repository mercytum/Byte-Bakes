
@{
    ViewData["Title"] = "Why choose Byte Bakes?";
}

<div class="landing-small">
    <h1>ONLINE STORE</h1>
</div>

@{
    ViewData["Title"] = "Why Byte-Bake?";
}

<div class="why-us">
    <h1 class="text-center mb-4" style="color: #ddc67e;">Why Choose Us?</h1>

    <p class="lead text-center">
        Byte-Bake combines the art of baking with the precision of technology to bring you customized, delightful pastries for every occasion.
    </p>

    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <img src="/images/fresh1.png" alt="Freshly Baked" class="img-fluid rounded-circle mb-3" style="width: 100px;">
            <h4 style="color: #ddc67e;">Freshly Baked</h4>
            <p>We guarantee fresh and high-quality pastries, baked with love and precision every single day.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="/images/custom1.png" alt="Endless Customization" class="img-fluid rounded-circle mb-3" style="width: 100px;">
            <h4 style="color: #ddc67e;">Endless Customization</h4>
            <p>Personalize your pastries with a wide range of flavors, fillings, and toppings to match your preferences.</p>
        </div>
        <div class="col-md-4 text-center">
            <img src="/images/custom.png" alt="Tech-Driven Innovation" class="img-fluid rounded-circle mb-3" style="width: 100px;">
            <h4 style="color: #ddc67e;">Tech-Driven Innovation</h4>
            <p>Our cutting-edge technology ensures a seamless ordering experience and perfect results every time.</p>
        </div>
    </div>

    <div class="text-center mt-5">
        <a sp-controller="Home" asp-action="Category">
            <button>Our Menu</button>
            </a>
    </div>
</div>

<div class="subscribe" id="SubscribeSection">
        <div class="subscribe-text">
            <h3 style="color: #fffaef;">Get the inside scoop!</h3>
            <p>Sign up for our newsletter to receive exclusive offers, delicious recipes,</p> 
            <p>and the latest pastry updates from Byte Bakes!</p>
        </div>
        <div>
             @if (TempData["SubscriptionMessage"] != null)
            {
                <div style="color: #DDC67E; font-weight: bold;">
                    @TempData["SubscriptionMessage"]
                </div>
            }

            <form id="subscribeForm" method="post" action="Subscribe">
                <label for="email" style="color: #DDC67E;">Email</label> 
                <input type="email" name="email" required />
            <button type="submit">Sign Me Up!</button>
            </form>
        </div>

</div>

<script>
    document.getElementById("subscribeForm").addEventListener("submit", function () {
        // Clear the input field after submission
        document.getElementById("email").value = "";
    });
</script>

<style>


    .img-fluid {
        transition: transform 0.3s ease;
    }

    .img-fluid:hover {
        transform: scale(1.1);
    }
</style>
